<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
                  xmlns:local="clr-namespace:ClienteSistemaMatricula.Views"
                  prism:ViewModelLocator.AutowireViewModel="True"
                  x:Class="ClienteSistemaMatricula.Views.MDMenu">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <Button Text="Alunos" Command="{Binding AlunosCommand}" />
                <Button Text="Professores" Command="{Binding ProfessoresCommand}"/>
                <Button Text="Cursos" Command="{Binding CursosCommand}"/>
                <Button Text="Materias" Command="{Binding MateriasCommand}"/>
                <Button Text="Turmas" Command="{Binding TurmasCommand}" />
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <local:StartPage/>
    </MasterDetailPage.Detail>
</MasterDetailPage>